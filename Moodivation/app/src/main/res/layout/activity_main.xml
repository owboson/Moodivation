<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mainActivityView"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/digitSpanTaskPreviewButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Digit Span Task" />

        <Button
            android:id="@+id/questionnairePreviewButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Questionnaire" />

        <include
            layout="@layout/chart_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <de.b08.moodivation.ui.StepsBarChart
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <de.b08.moodivation.ui.WellbeingChart
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <de.b08.moodivation.ui.AltitudeChart
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>
</ScrollView>